{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "typings.d.ts",
      "node_modules/@types",
      "../../node_modules/@types"
    ],
    "lib": ["es6", "es5", "es7", "dom", "es2017"],
    "module": "commonjs",
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "removeComments": true,
    "target": "es2016",
    "outDir": "dist",
    "baseUrl": "./src"
  },
  "types": ["node"],
  "exclude": ["node_modules", "dist", "test"]
}