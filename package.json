{
  "name": "arkana",
  "description": "Reproducibility made simple",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "./package.json"
  ],
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "prebundle": "rimraf ./build",
    "bundle": "webpack"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "commander": "^10.0.1",
    "fs-extra": "^11.1.1",
    "nanoid": "4.0.2"
  },
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.15.11",
    "nodemon": "^2.0.22",
    "rimraf": "^5.0.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      "**/*.json",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/index.ts",
    "ext": "ts, js"
  }
}